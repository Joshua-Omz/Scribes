# Dev Container Environment Variables
# This file contains default values for development

# Application
APP_NAME=Scribes
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/scribes_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# SMTP Configuration (for development, you might use a service like MailHog)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@scribes.dev

# AI/ML Configuration
# Add your Hugging Face token if needed
HF_TOKEN=

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Logging
LOG_LEVEL=DEBUG
