# Dev Container Environment Variables
# This file contains default values for development

# Application
APP_NAME=Scribes
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/scribes_db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# Rate Limiting Configuration (Production Features)
RATE_LIMITING_ENABLED=true
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_DAY=500
GLOBAL_CONCURRENT_LIMIT=100
GLOBAL_HOURLY_LIMIT=1000
USER_DAILY_COST_LIMIT=5.0
GLOBAL_DAILY_COST_LIMIT=100.0

# JWT Configuration
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# SMTP Configuration (for development, you might use a service like MailHog)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@scribes.dev

# AI/ML Configuration
# Add your Hugging Face token if needed
HUGGINGFACE_API_KEY=
HF_TOKEN=

# Hugging Face Models
HF_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
HF_GENERATION_MODEL=meta-llama/Llama-3.2-3B-Instruct
HF_USE_API=true
HF_API_MODE=chat
HF_GENERATION_TEMPERATURE=0.2
HF_GENERATION_TIMEOUT=30

# AI Assistant Token Budgets
ASSISTANT_MODEL_CONTEXT_WINDOW=2048
ASSISTANT_MAX_CONTEXT_TOKENS=1200
ASSISTANT_SYSTEM_TOKENS=150
ASSISTANT_USER_QUERY_TOKENS=150
ASSISTANT_MAX_OUTPUT_TOKENS=400
ASSISTANT_EMBEDDING_DIM=384
ASSISTANT_CHUNK_SIZE=384
ASSISTANT_CHUNK_OVERLAP=64
ASSISTANT_TOP_K=50

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Logging
LOG_LEVEL=DEBUG
